# ============================================================================
# Terraform Variables Configuration
# ============================================================================
# Copy this file to `terraform.tfvars` and fill in your actual values.
# NEVER commit `terraform.tfvars` to Git - it contains sensitive data!
#
# cp terraform.tfvars.example terraform.tfvars
# ============================================================================

# GCP Project Configuration
project_id = "your-gcp-project-id"  # Replace with your GCP project ID
region     = "europe-west1"          # Choose your preferred region

# Service Configuration
service_name = "tracking-status"     # Name for your Cloud Run service
docker_image = "gcr.io/your-project-id/tracking-status:latest"  # Your Docker image

# Database Configuration
db_instance_name = "tracking-db"
db_name          = "tracking_db"
db_user          = "tracking_user"
db_password      = "CHANGE_ME_STRONG_PASSWORD_HERE"  # Use a strong password!

# Blockchain Storage Configuration
blockchain_bucket_name = "tracking-blockchain-storage"  # Must be globally unique

# Environment (for different deployments)
environment = "production"  # or "staging", "development"
